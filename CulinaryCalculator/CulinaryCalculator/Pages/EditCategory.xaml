<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CulinaryCalculator.Pages.EditCategory"
             ControlTemplate="{StaticResource ModalPageTemplate}">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Text="Название категории"/>
            <Entry Grid.Row="1" Text="{Binding Title}"/>
            <Button Grid.Row="2" Text="Выберите картинку"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>